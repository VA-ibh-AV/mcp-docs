# PostgreSQL Database Configuration
POSTGRES_USER=mcpdocs
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=mcp_docs
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Go Backend Configuration
GO_BACKEND_PORT=8080
JWT_SECRET_KEY=your_jwt_secret_key_here
INTERNAL_API_KEY=your_internal_api_key_here

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
FRONTEND_PORT=3000

# Kafka Configuration (optional - defaults are usually fine)
KAFKA_BROKER_ID=1
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://localhost:9092,PLAINTEXT_INTERNAL://kafka:29092

# Observability Configuration
METRICS_PORT=9091  # Python RAG Agent metrics port (default: 9091)
# Go backend metrics are on port 9090
# Prometheus is on port 9090 (host)
# Grafana is on port 3001 (host)
