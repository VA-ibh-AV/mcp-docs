FROM golang:1.24-bookworm

# Install dependencies for Playwright
RUN apt-get update && apt-get install -y \
    # Playwright dependencies
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    libpango-1.0-0 \
    libcairo2 \
    libatspi2.0-0 \
    libgtk-3-0 \
    # Additional dependencies
    wget \
    ca-certificates \
    fonts-liberation \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*

# Install air for hot reloading (pin version compatible with Go 1.24)
RUN go install github.com/air-verse/air@v1.61.7

# Add Go bin to PATH
ENV PATH="${PATH}:/go/bin"

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Install Playwright browsers
RUN go run github.com/playwright-community/playwright-go/cmd/playwright@latest install --with-deps chromium

# Copy air config if it exists
COPY .air.toml* ./

# Expose port
EXPOSE 8005

# Use air to run the application with hot reloading
CMD ["air", "-c", ".air.toml"]

