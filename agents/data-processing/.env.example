# Python RAG Agent Environment Variables
# Copy to .env and fill in values

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=rag-processor
KAFKA_TOPIC=indexing_jobs
KAFKA_AUTO_OFFSET_RESET=earliest

# Processing Configuration
MAX_WORKERS=5
MAX_RAG_INSTANCES=10
RAG_INSTANCE_TTL=300

# Retry Configuration
MAX_RETRIES=3
RETRY_INITIAL_BACKOFF=1.0
RETRY_MAX_BACKOFF=30.0

# PostgreSQL Configuration (for LightRAG)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mcpdocs

# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_LLM_MODEL=gpt-4o-mini

# Go Backend Configuration
GO_BACKEND_URL=http://localhost:8005
GO_BACKEND_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
