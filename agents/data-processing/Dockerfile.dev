# Python RAG Agent - Development Dockerfile
# Uses hot reloading for development

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libxml2 \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install development dependencies
RUN pip install --no-cache-dir watchfiles

# Copy application code (will be overwritten by volume mount)
COPY . .

# Set Python path
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Use watchfiles for hot reloading
CMD ["python", "-m", "watchfiles", "python -m app.main", "."]
