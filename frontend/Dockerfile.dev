FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

EXPOSE 3000

# Set environment to development
ENV NODE_ENV=development

# Run dev server with host 0.0.0.0 to allow external connections and enable polling for file changes
CMD ["npm", "run", "dev", "--", "-H", "0.0.0.0", "-p", "3000"]

